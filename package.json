{
  "name": "telegram-manager",
  "productName": "Telegram Manager",
  "version": "1.0.2",
  "description": "Telegram Manager",
  "author": {
    "name": "Rio",
    "email": "rio@dev.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ibrwhm/react-electron.git"
  },
  "main": "main.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "concurrently \"npm run dev\" \"electron .\"",
    "electron:build": "electron-builder",
    "pack": "rimraf release && npm run build && cross-env NODE_ENV=production electron-builder build --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-log": "^5.2.4",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "fluent-ffmpeg": "^2.1.3",
    "framer-motion": "^11.17.0",
    "fs-extra": "^11.2.0",
    "gramjs-sqlitesession": "^1.1.1",
    "lucide-react": "^0.471.0",
    "mongoose": "^8.9.4",
    "node-telegram-bot-api": "^0.66.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hot-toast": "^2.5.1",
    "react-icons": "^5.4.0",
    "react-router-dom": "^7.1.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "telegram": "^2.26.16"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.7",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.rio.telegrammanager",
    "productName": "Telegram Manager",
    "copyright": "Copyright 2024 Rio",
    "publish": {
      "provider": "github",
      "owner": "ibrwhm",
      "repo": "react-electron",
      "private": true,
      "token": "${process.env.GITHUB_TOKEN}"
    },
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "src/**/*",
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build",
        "to": "build",
        "filter": [
          "icon.ico"
        ]
      },
      {
        "from": "src/assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*",
      "node_modules/electron-store/**/*",
      "**/node_modules/@ffmpeg-installer/win32-x64/ffmpeg.exe",
      "src/database/**/*",
      "src/models/**/*",
      "src/utils/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
